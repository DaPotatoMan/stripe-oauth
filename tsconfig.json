{
   "compilerOptions": {
      "baseUrl": ".",
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "Node",
      "useDefineForClassFields": true,
      "lib": ["ESNext", "DOM"],
      "strict": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,

      "incremental": false,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "importHelpers": true,
      "forceConsistentCasingInFileNames": true,

      "types": ["vite/client"],

      "paths": {
         "~/*": ["src/*"]
      }
   },
   "include": ["**.js", "**.ts", "src/**/*.ts", "src/**/*.d.ts"],
   "exclude": ["dist", "node_modules"]
}
